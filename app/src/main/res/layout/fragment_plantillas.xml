<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantillasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <Button
                android:id="@+id/plantilla_barcelona"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:text="FC Barcelona"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>

            <Button
                android:id="@+id/plantilla_real_madrid"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:text="Real Madrid"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/plantilla_real_betis"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:text="Real Betis"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/plantilla_atletico_madrid"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:text="Atletico de Madrid"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:src="@android:drawable/btn_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>